extends ./templates/wrapper.pug

block title
	title The Changelog
	// Be sure to add meta tags here
	meta(name="description", content="")

block content
	div.mosiac
		section
			h2.accessibility-hidden Featured Quotes
			//- Repeats
			article.featured-podcast
				div.featured-podcast_content
					q I train a computer like I train a dog.
					cite -Matz
						sup Creator of the Ruby Programming Language
				div.featured-podcast_navigation
					button
						img(src="img/arrow-side.svg", alt="Show previous featured quote")/
					h3
						span The Changelog #202
						| 23 years of Ruby with Matz
					button
						img.flip-horizontal(src="img/arrow-side.svg", alt="Show next featured quote")/
				div.featured-podcast_footer
					nav.podcast-menu
						button
							img(src="img/play.svg", alt="Play podcast graphic")/
							| Play
						a(href="#")
							img(src="img/subscribe.svg", alt="Subscribe to podcast graphic")/
							| Subscribe
						a(href="#")
							img(src="img/share.svg", alt="Share podcast graphic")/
							| Share
						a(href="#")
							img(src="img/sponsor.svg", alt="Sponsor podcast graphic")/
							| Sponsor
						button.podcast-menu_more-button
							img(src="img/more.svg", alt="More podcast options graphic")/
					div.podcast-menu-tooltip hello world
